{
  "manifest_version": 2,
  "name": "Notum - Local Study Assistant",
  "version": "1.0.0",
  "description": "Local-first browser extension for active study, note-taking, and knowledge organization from web pages and videos",

  "permissions": [
    "activeTab",
    "storage",
    "contextMenus",
    "<all_urls>"
  ],

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],

  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "Notum - Study Assistant",
    "default_icon": {
      "16": "icons/icon16.svg",
      "32": "icons/icon32.svg",
      "48": "icons/icon48.svg",
      "128": "icons/icon128.svg"
    }
  },

  "icons": {
    "16": "icons/icon16.svg",
    "32": "icons/icon32.svg",
    "48": "icons/icon48.svg",
    "128": "icons/icon128.svg"
  },

  "web_accessible_resources": [
    "workers/*.js",
    "assets/*"
  ],

  "content_security_policy": "script-src 'self'; object-src 'self';"
}
