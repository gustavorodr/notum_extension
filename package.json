{
  "name": "notum-extension",
  "version": "1.0.0",
  "description": "Local-first browser extension for active study, note-taking, and knowledge organization from web pages and videos",
  "main": "dist/background.js",
  "scripts": {
    "dev": "webpack --mode development --watch",
    "dev:firefox": "TARGET=firefox webpack --mode development --watch",
    "dev:firefox:mv2": "TARGET=firefox-mv2 webpack --mode development --watch",
    "build": "webpack --mode production",
    "build:firefox": "TARGET=firefox webpack --mode production",
    "build:firefox:mv2": "TARGET=firefox-mv2 webpack --mode production",
    "build:dev": "webpack --mode development",
    "build:dev:firefox": "TARGET=firefox webpack --mode development",
    "build:dev:firefox:mv2": "TARGET=firefox-mv2 webpack --mode development",
    "clean": "rimraf dist",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "prettier": "prettier --write \"src/**/*.{ts,tsx,css,scss}\"",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "keywords": [
    "browser-extension",
    "note-taking",
    "study",
    "knowledge-management",
    "local-first",
    "privacy"
  ],
  "author": "Gustavo",
  "license": "MIT",
  "devDependencies": {
    "@types/chrome": "^0.0.270",
    "@types/jest": "^29.5.5",
    "@types/jszip": "^3.4.1",
    "@types/node": "^20.11.0",
    "@types/react": "^18.2.48",
    "@types/react-dom": "^18.2.18",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "copy-webpack-plugin": "^12.0.2",
    "css-loader": "^6.9.1",
    "eslint": "^8.56.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "html-webpack-plugin": "^5.6.0",
    "jest": "^29.7.0",
    "mini-css-extract-plugin": "^2.7.7",
    "prettier": "^3.2.4",
    "rimraf": "^5.0.5",
    "style-loader": "^3.3.4",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.3",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "dexie": "^3.2.4",
    "jszip": "^3.10.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}